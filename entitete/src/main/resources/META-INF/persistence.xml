<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">
    <persistence-unit name="evcharging-jpa" transaction-type="JTA">
        <jta-data-source>jdbc/EVChargingDS</jta-data-source>

        <class>si.fri.prpo.skupina00.entitete.Entity</class>
        <class>si.fri.prpo.skupina00.entitete.Owner</class>
        <class>si.fri.prpo.skupina00.entitete.Reservation</class>
        <class>si.fri.prpo.skupina00.entitete.Station</class>
        <class>si.fri.prpo.skupina00.entitete.StationLocation</class>
        <class>si.fri.prpo.skupina00.entitete.User</class>
        <class>si.fri.prpo.skupina00.entitete.Charge</class>
        <class>si.fri.prpo.skupina00.entitete.City</class>
        <class>si.fri.prpo.skupina00.entitete.Person</class>

        <properties>
            <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
            <property name="javax.persistence.schema-generation.create-source" value="metadata"/>
            <property name="javax.persistence.sql-load-script-source" value="sql-scripts/init-db.sql"/>
            <property name="javax.persistence.schema-generation.drop-source" value="metadata"/>
            <property name="hibernate.show-sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
